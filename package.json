{
  "name": "inventra",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Asset Management System",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:start\" --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgGreen.bold\"",
    "start": "npm run dev",
    "frontend:start": "cd frontend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "build": "npm run frontend:build",
    "frontend:build": "cd frontend && npm run build",
    "test": "npm run frontend:test && npm run backend:test",
    "frontend:test": "cd frontend && npm test",
    "backend:test": "cd backend && npm test",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "install:all": "npm run setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
