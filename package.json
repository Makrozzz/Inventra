{
  "name": "inventra",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Asset Management System",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "frontend:dev": "cd frontend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "build": "npm run frontend:build && npm run backend:build",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && npm run build",
    "test": "npm run frontend:test && npm run backend:test",
    "frontend:test": "cd frontend && npm test",
    "backend:test": "cd backend && npm test",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "seed": "cd backend && npm run seed",
    "migrate": "cd backend && node -e \"require('./config/database').initializeDatabase()\"",
    "init-db": "cd backend && node scripts/init-database.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
